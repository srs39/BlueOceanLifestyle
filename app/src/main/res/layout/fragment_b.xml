<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BPFragment"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/bp_textbox_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/bp_sys"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:width="90dp"
            android:hint="@string/systolic"
            android:inputType="number" />

        <EditText
            android:id="@+id/bp_dia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:width="90dp"
            android:hint="@string/diastolic"
            android:inputType="number" />
        <Button
            android:id="@+id/bp_enter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/colorPrimary"
            android:text="@string/enter_button" />
    </LinearLayout>

<ListView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/bp_textbox_layout"
    android:id="@+id/bp_data_list"
    android:layout_marginTop="8dp"
    >

</ListView>



</RelativeLayout>